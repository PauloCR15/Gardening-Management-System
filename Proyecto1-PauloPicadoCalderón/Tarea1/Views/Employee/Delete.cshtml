@model Tarea1.Models.Employee

@{
    ViewData["Title"] = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenedor">

    <div class="alert alert-danger mt-3" role="alert">
        ¿Seguro que quieres borrar este empleado?
    </div>

    <div class="border rounder p-3 mb-4">
        <h5 class="text-center display-5 mb-5">Detalles del Empleado</h5>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeBirthdate)
            </dt>
            <dd class="col-sm-10">
                @Model.EmployeeBirthdate.Date.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeLaterality)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeLaterality)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeSalaryxHour)
            </dt>
            <dd class="col-sm-10">
                @String.Format("{0:N0}", Model.EmployeeSalaryxHour)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeStartDate)
            </dt>
            <dd class="col-sm-10">
                @Model.EmployeeStartDate.Date.ToShortDateString()
            </dd>
        </dl>
    </div>

    <div class="d-flex gap-3">
        <form metod="post" asp-action="Delete">
            <input type="hidden" asp-for="EmployeeID" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg mt-3" />
        </form>
        <a asp-action="List" class="btn btn-secondary btn-lg mt-3">Volver</a>
    </div>
</div>
