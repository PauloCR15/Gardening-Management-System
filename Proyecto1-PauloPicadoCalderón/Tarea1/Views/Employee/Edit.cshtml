@model Tarea1.Models.Employee

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contenedor border rounded mb-4 mt-3">
    <h5 class="text-center display-5 mb-5 mt-1">Editar Empleado</h5>
    <div class="row" style="margin-left:1rem;">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmployeeID" class="control-label"></label>
                    <input asp-for="EmployeeID" class="form-control" readonly />
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeBirthdate" class="control-label"></label>
                    <input asp-for="EmployeeBirthdate" class="form-control" type="date" />
                    <span asp-validation-for="EmployeeBirthdate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeLaterality" class="control-label"></label>
                    <select asp-for="EmployeeLaterality" class="form-control">
                        <option value="">Seleccione una opción</option>
                        <option value="Diestro">Diestro</option>
                        <option value="Zurdo">Zurdo</option>
                    </select>
                    <span asp-validation-for="EmployeeLaterality" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeSalaryxHour" class="control-label"></label>
                    <input asp-for="EmployeeSalaryxHour" class="form-control" texholder="Salario" />
                    <span asp-validation-for="EmployeeSalaryxHour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeStartDate" class="control-label"></label>
                    <input asp-for="EmployeeStartDate" class="form-control" type="date" />
                    <span asp-validation-for="EmployeeStartDate" class="text-danger"></span>
                </div>
                <form method="post" asp-action="Edit">
                    <input type="hidden" asp-for="EmployeeID" />
                    <input type="submit" value="Editar" class="btn btn-primary w-50 me-2 mb-3" />
                </form>
                <a asp-action="List" class="btn btn-secondary w-40 mb-3 text-uppercase" style="font-size:1.8rem; padding:1rem 2rem;">Volver</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
